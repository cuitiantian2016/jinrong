<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <View
        android:id="@+id/view_unable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10dp"
        android:background="@color/color_F7F8F9"/>

    <RelativeLayout
        android:id="@+id/rl_msg_trade"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginBottom="@dimen/dimen_12dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#323232"
            android:textSize="@dimen/dimen_15sp"
            android:text="交易提醒"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_title"
            android:textSize="13dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:textColor="#CACBCC"
            android:text="09-27  13:45 "
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_user_right_arrow"
            android:layout_alignParentRight="true"/>

        <View
            android:id="@+id/v_msg_system_red"
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_10dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/image"
            android:layout_marginRight="@dimen/dimen_9dp"
            android:background="@drawable/shape_red"
            android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>