<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_product_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1.0"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tv_product_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center|left"
            android:textColor="@color/c_464646"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_pro_open_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_1"
            android:gravity="center|left"
            android:text="--"
            android:textColor="@color/trade_up"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pro_open_1"
            android:gravity="center|left">

            <TextView
                android:id="@+id/tv_pro_rate_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/trade_up"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_pro_ratechange_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/trade_up"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_product_2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1.0" >

        <View
            android:layout_width="0.5dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/c_E6E7EA_70" />

        <TextView
            android:id="@+id/tv_product_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center|left"
            android:textColor="@color/c_464646"
            android:textSize="15sp"
            android:paddingLeft="16dp"/>

        <TextView
            android:id="@+id/tv_pro_open_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_2"
            android:gravity="center|left"
            android:text="--"
            android:textColor="@color/trade_up"
            android:textSize="24sp"
            android:paddingLeft="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pro_open_2"
            android:gravity="center|left"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/tv_pro_rate_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/trade_up"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_pro_ratechange_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/trade_up"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_product_3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1.0">

        <View
            android:layout_width="0.5dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/c_E6E7EA_70" />

        <TextView
            android:id="@+id/tv_product_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center|left"
            android:textColor="@color/c_464646"
            android:textSize="15sp"
            android:paddingLeft="16dp"/>

        <TextView
            android:id="@+id/tv_pro_open_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_3"
            android:gravity="center|left"
            android:text="--"
            android:textColor="@color/trade_up"
            android:textSize="24sp"
            android:paddingLeft="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pro_open_3"
            android:gravity="center|left"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/tv_pro_rate_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/trade_up"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_pro_ratechange_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/trade_up"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>