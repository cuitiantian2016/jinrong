<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="37dp"
    android:layout_marginRight="37dp"
    android:background="@drawable/shape_white_circle_side">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/dimen_28dp"
        android:layout_gravity="center_horizontal"
        tools:src="@mipmap/icon_hint"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/color_3C383F"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_6dp"
        tools:text="牛币不足"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/color_3C383F"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_6dp"
        tools:text="投资可以获得相应金额的牛币哦"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_line"
        android:background="@color/color_EDEDED"
        android:layout_marginTop="@dimen/dimen_25dp"/>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:orientation="horizontal"
             android:showDividers="middle">

             <TextView
                 android:id="@+id/tv_cancel"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_below="@+id/view_horizontal"
                 android:layout_toLeftOf="@+id/view_vertical"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:text="我知道了"
                 android:textColor="@color/color_A4A5A6"
                 android:textSize="18sp" />

             <View
                 android:id="@+id/v_line"
                 android:layout_width="@dimen/dimen_line"
                 android:layout_height="match_parent"
                 android:background="@color/color_EDEDED"
                 android:layout_marginTop="7.5dp"
                 android:layout_marginBottom="7.5dp"/>

             <TextView
                 android:id="@+id/tv_accomplish"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_below="@+id/view_horizontal"
                 android:layout_toRightOf="@+id/view_vertical"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:paddingBottom="@dimen/dimen_5dp"
                 android:paddingTop="@dimen/dimen_5dp"
                 android:text="在赏一笔"
                 android:textColor="@color/color_008EFF"
                 android:textSize="18sp" />
         </LinearLayout>
     </LinearLayout>
</LinearLayout>