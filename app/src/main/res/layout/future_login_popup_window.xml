<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_left_right_radius_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_18dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="登录期货账户"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_20sp" />

            <!--<ImageView-->
            <!--android:id="@+id/iv_open_account_tip"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="10dp"-->
            <!--android:src="@mipmap/ic_trade_tip" />-->

            <ImageView
                android:id="@+id/iv_close_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:padding="10dp"
                android:src="@mipmap/ic_close_popup" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_20dp">

            <TextView
                android:id="@+id/tv_comp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="开户公司"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />

            <LinearLayout
                android:id="@+id/ll_comp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_18dp"
                android:layout_toRightOf="@+id/tv_comp_name"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_comp"
                    android:layout_width="@dimen/dimen_15dp"
                    android:layout_height="@dimen/dimen_15dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_guofu" />

                <TextView
                    android:id="@+id/tv_comp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_9dp"
                    android:paddingBottom="@dimen/dimen_1dp"
                    android:text="国富期货"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_16sp" />

                <ImageView
                    android:id="@+id/iv_open_account_tip"
                    android:layout_width="@dimen/dimen_19dp"
                    android:layout_height="@dimen/dimen_19dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_14dp"
                    android:src="@mipmap/ic_trade_tip"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_select_comp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dimen_12dp"
                android:text="选择"
                android:textColor="@color/color_008EFF"
                android:textSize="@dimen/dimen_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp_half"
                android:layout_alignStart="@+id/ll_comp"
                android:layout_below="@+id/tv_select_comp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:background="@color/color_E6E6E6" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资金账号"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_18dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="开户短信中的8位数字账户"
                    android:inputType="number"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_B1B1B3"
                    android:textSize="@dimen/dimen_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp_half"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:background="@color/color_E6E6E6" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易密码"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_18dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入您的6-16位密码"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_B1B1B3"
                    android:textSize="@dimen/dimen_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp_half"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:background="@color/color_E6E6E6" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_fxgz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/ic_login_tip"
                android:drawablePadding="@dimen/dimen_4dp"
                android:text="风险告知"
                android:textColor="@color/color_86A2B0"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:padding="@dimen/dimen_10dp"
                android:text="忘记密码"
                android:textColor="@color/color_008EFF"
                android:textSize="@dimen/dimen_14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/btn_login_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:background="@drawable/shape_xiushi_bg_2dp"
            android:enabled="false"
            android:gravity="center"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_18sp" />

        <TextView
            android:id="@+id/btn_open_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/open_account_btn_selector"
            android:gravity="center"
            android:text="立即开户"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请在以下时间登录：工作日 8:00~16:00  20:00~次日02:30"
                android:textColor="@color/color_B1B1B3"
                android:textSize="@dimen/dimen_12sp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>