<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/tv_live_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_12sp"
            android:paddingBottom="@dimen/dimen_7dp"
            android:paddingTop="@dimen/dimen_7dp"
            android:drawablePadding="5dp"
            android:layout_marginTop="@dimen/dimen_11dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:drawableLeft="@mipmap/combinedshape"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:text="直播中"
            android:background="@drawable/bg_live"
            android:textColor="@color/color_white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/live_bg"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/dimen_5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_live_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_18sp"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:text="直播中"
                android:textColor="@color/color_white"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_3dp"
                android:layout_marginBottom="@dimen/dimen_12dp">

                <TextView
                    android:id="@+id/tv_live_content"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_12sp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:textColor="#CACBCC"
                    android:text="内容"/>

                <TextView
                    android:id="@+id/tv_live_num"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_12sp"
                    android:drawablePadding="@dimen/dimen_5dp"
                    android:drawableLeft="@mipmap/huo"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:textColor="@color/color_white"
                    android:text="48人在看"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="60dp">
        <com.honglu.future.widget.CircleImageView
            android:id="@+id/iv_teach"
            android:layout_width="35dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:src="@color/color_333333"
            android:layout_height="35dp" />
        <TextView
            android:id="@+id/tv_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/dimen_16sp"
            android:text="一休老师"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:drawablePadding="@dimen/dimen_5dp"
            android:drawableRight="@mipmap/icon_down"
            android:textColor="#333333"/>
        <View
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/tv_teacher_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@mipmap/add_recommend"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp">
        <View
            android:id="@+id/view_unable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_line"/>

        <View
            android:id="@+id/view_able"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:background="@color/color_line"/>
    </RelativeLayout>
    <TextView
        android:paddingBottom="@dimen/dimen_3dp"
        android:paddingTop="@dimen/dimen_3dp"
        android:id="@+id/tv_teach_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:textColor="#979899"
        android:paddingLeft="15dp"
        android:paddingRight="@dimen/dimen_15dp"
        android:text="，稳健型操作。"
        android:textSize="12sp"/>
</LinearLayout>