<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_top_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_popup_corner"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_28dp"
        />
    <LinearLayout
        android:id="@+id/ll_rootLayout"
        android:layout_width="100dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_below="@+id/iv_top_corner"
        android:background="@drawable/shape_white_2dp_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:gravity="center"
            android:text="全屏"
            android:textColor="@color/color_333333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp_half"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/tv_pzjs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/dimen_10dp"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_10dp"
            android:text="品种介绍"
            android:textColor="@color/color_333333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp_half"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/tv_qhsy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/dimen_10dp"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_10dp"
            android:text="交易术语"
            android:textColor="@color/color_333333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp_half"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/tv_zjsy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:gravity="center"
            android:text="资金术语"
            android:textColor="@color/color_333333" />
    </LinearLayout>

</RelativeLayout>