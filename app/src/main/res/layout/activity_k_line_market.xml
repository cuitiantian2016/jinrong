<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guang_yin_k"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.trade.kchart.KLineMarketActivity">

    <LinearLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_26252D"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_20dp"
                android:src="@mipmap/ic_back_white" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="玉米1801"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_18sp" />

            <ImageView
                android:id="@+id/show_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_name_arrow" />

            <TextView
                android:id="@+id/tv_closed"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_22dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:background="@drawable/shape_xiushi_bg_2dp"
                android:gravity="center"
                android:text="休市中"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_12sp"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_new_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:text="1678"
                android:textColor="@color/color_2CC593"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tv_rise_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_new_price"
                android:layout_marginLeft="16dp"
                android:text="-73"
                android:textColor="@color/color_1DB98F"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/tv_rise_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_new_price"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_toRightOf="@+id/tv_rise_num"
                android:text="-1.91%"
                android:textColor="@color/color_1DB98F"
                android:textSize="@dimen/dimen_14sp" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:src="@mipmap/close_business_transparent"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_rise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_new_price"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/tv_new_price"
                android:minWidth="43dp"
                android:textColor="@color/color_f0f0f0" />

            <TextView
                android:id="@+id/tv_rise_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rise"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@id/tv_new_price"
                android:minWidth="43dp"
                android:textColor="@color/color_f0f0f0" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_alignTop="@id/tv_new_price"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@id/tv_rise_percent">

                <ImageView
                    android:id="@+id/img_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/price_arrow_up_white"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_vol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/tv_new_price"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:minHeight="16dp"
                android:minWidth="35dp"
                android:text="——"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/tv_hold_vol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_vol"
                android:layout_marginRight="12dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_toRightOf="@+id/text_close"
                android:gravity="center"
                android:minHeight="16dp"
                android:minWidth="35dp"
                android:text="——"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/text_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_new_price"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/tv_vol"
                android:text="成交量："
                android:textColor="@color/color_B1B3B2"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/text_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignTop="@id/tv_hold_vol"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/tv_vol"
                android:text="持仓量："
                android:textColor="@color/color_B1B3B2"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/tv_buy_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_new_price"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/text_open"
                android:gravity="center"
                android:minHeight="16dp"
                android:minWidth="35dp"
                android:text="——"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:id="@+id/tv_sell_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/text_close"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@id/text_open"
                android:gravity="center"
                android:minHeight="16dp"
                android:minWidth="35dp"
                android:text="——"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_new_price"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/tv_buy_price"
                android:text="买价："
                android:textColor="@color/color_B1B3B2"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/text_close"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/tv_buy_price"
                android:text="卖价："
                android:textColor="@color/color_B1B3B2"
                android:textSize="@dimen/dimen_14sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_pull_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp_half"
                android:background="@color/color_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="涨停"
                        android:textColor="@color/color_B1B3B2"
                        android:textSize="@dimen/dimen_14sp" />

                    <TextView
                        android:id="@+id/tv_zt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:text="1766"
                        android:textColor="@color/color_special_red"
                        android:textSize="@dimen/dimen_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开盘"
                        android:textColor="@color/color_B1B3B2"
                        android:textSize="@dimen/dimen_14sp" />

                    <TextView
                        android:id="@+id/tv_kp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:text="1685"
                        android:textColor="@color/color_special_red"
                        android:textSize="@dimen/dimen_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最高"
                        android:textColor="@color/color_B1B3B2"
                        android:textSize="@dimen/dimen_14sp" />

                    <TextView
                        android:id="@+id/tv_zg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:text="1687"
                        android:textColor="@color/color_special_red"
                        android:textSize="@dimen/dimen_14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="跌停"
                        android:textColor="@color/color_B1B3B2"
                        android:textSize="@dimen/dimen_14sp" />

                    <TextView
                        android:id="@+id/tv_dt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:text="1598"
                        android:textColor="@color/color_2CC593"
                        android:textSize="@dimen/dimen_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="均价"
                        android:textColor="@color/color_B1B3B2"
                        android:textSize="@dimen/dimen_14sp" />

                    <TextView
                        android:id="@+id/tv_jj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:text="1682"
                        android:textColor="@color/color_special_red"
                        android:textSize="@dimen/dimen_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最低"
                        android:textColor="@color/color_B1B3B2"
                        android:textSize="@dimen/dimen_14sp" />

                    <TextView
                        android:id="@+id/tv_zd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:text="1676"
                        android:textColor="@color/color_special_red"
                        android:textSize="@dimen/dimen_14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昨收"
                        android:textColor="@color/color_B1B3B2"
                        android:textSize="@dimen/dimen_14sp" />

                    <TextView
                        android:id="@+id/tv_zs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:text="1686"
                        android:textColor="@color/color_B1B3B2"
                        android:textSize="@dimen/dimen_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结算"
                        android:textColor="@color/color_B1B3B2"
                        android:textSize="@dimen/dimen_14sp" />

                    <TextView
                        android:id="@+id/tv_js"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:text="1681"
                        android:textColor="@color/color_B1B3B2"
                        android:textSize="@dimen/dimen_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昨结"
                        android:textColor="@color/color_B1B3B2"
                        android:textSize="@dimen/dimen_14sp" />

                    <TextView
                        android:id="@+id/tv_zj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:text="1682"
                        android:textColor="@color/color_B1B3B2"
                        android:textSize="@dimen/dimen_14sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:padding="@dimen/dimen_6dp"
            android:src="@mipmap/ic_kline_pull" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <include
                android:id="@+id/layout_choose"
                layout="@layout/include_chart_top"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_choose_minute_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="价格："
                    android:textColor="@color/color_727272"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_choose_minute_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_d8d7d7" />

            <com.honglu.future.widget.kchart.SlidingTabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/color_292A34"
                app:tl_indicator_color="@color/color_008EFF"
                app:tl_indicator_height="@dimen/dimen_2dp"
                app:tl_tab_padding="0dp"
                app:tl_textSelectColor="@android:color/white"
                app:tl_textUnselectColor="@color/color_B1B3B2"
                app:tl_textsize="@dimen/dimen_14sp"
                app:tl_underline_color="@color/transparent"
                app:tl_underline_height="@dimen/dimen_1dp_half" />
        </RelativeLayout>


        <com.honglu.future.widget.kchart.ViewPagerEx
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/buy_up"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_FB4F4F"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_rise_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3725"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:text="买涨"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buy_down"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_2CC593"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_down_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3725"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:text="买跌"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hold_position"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_hold_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:text="持仓"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_16sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>