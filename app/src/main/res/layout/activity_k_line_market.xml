<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guang_yin_k"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.trade.kchart.KLineMarketActivity">

    <LinearLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_ec5f6a_8157f1"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <TextView
                android:id="@+id/tv_new_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:text="----"
                android:textColor="@color/color_f0f0f0"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_new_price"
                android:layout_marginLeft="12dp"
                android:minWidth="103dp"
                android:textColor="@color/white_70"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_time"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@id/tv_time"
                android:src="@mipmap/close_business_transparent"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_rise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_new_price"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/tv_new_price"
                android:minWidth="43dp"
                android:textColor="@color/color_f0f0f0" />

            <TextView
                android:id="@+id/tv_rise_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rise"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@id/tv_new_price"
                android:minWidth="43dp"
                android:textColor="@color/color_f0f0f0" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_alignTop="@id/tv_new_price"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@id/tv_rise_percent">

                <ImageView
                    android:id="@+id/img_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/price_arrow_up_white"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_open_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/tv_new_price"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:minHeight="16dp"
                android:minWidth="35dp"
                android:text="——"
                android:textColor="@color/color_f0f0f0" />

            <TextView
                android:id="@+id/tv_close_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_open_price"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:minHeight="16dp"
                android:minWidth="35dp"
                android:text="——"
                android:textColor="@color/color_f0f0f0" />

            <TextView
                android:id="@+id/text_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_new_price"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/tv_open_price"
                android:text="今开"
                android:textColor="@color/white_70"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_close_price"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/tv_open_price"
                android:text="昨收"
                android:textColor="@color/white_70"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_new_price"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/text_open"
                android:gravity="center"
                android:minHeight="16dp"
                android:minWidth="35dp"
                android:text="——"
                android:textColor="@color/color_f0f0f0" />

            <TextView
                android:id="@+id/tv_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/text_close"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@id/text_open"
                android:gravity="center"
                android:minHeight="16dp"
                android:minWidth="35dp"
                android:text="——"
                android:textColor="@color/color_f0f0f0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_new_price"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/tv_height"
                android:text="最高"
                android:textColor="@color/white_70"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/text_close"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/tv_height"
                android:text="最低"
                android:textColor="@color/white_70"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <include
            android:id="@+id/layout_choose"
            layout="@layout/include_chart_top"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layout_choose_minute_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="价格："
                android:textColor="@color/color_727272"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_choose_minute_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_d8d7d7" />

        <com.honglu.future.widget.kchart.SlidingTabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:tl_indicator_color="@color/color_008EFF"
            app:tl_indicator_height="@dimen/dimen_2dp"
            app:tl_tab_padding="0dp"
            app:tl_textSelectColor="@color/color_008EFF"
            app:tl_textUnselectColor="@color/color_878787"
            app:tl_textsize="@dimen/dimen_14sp"
            app:tl_underline_color="@color/color_d8d7d7"
            app:tl_underline_height="@dimen/dimen_1dp_half" />
    </RelativeLayout>


    <com.honglu.future.widget.kchart.ViewPagerEx
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FFF0F0F0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_trade"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/buy_up"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_purple_radius_16"
                android:gravity="center"
                android:text="买涨"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/buy_down"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_green_radius16"
                android:gravity="center"
                android:text="买跌"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_close"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_close"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:background="@drawable/shap_stop_side_d8d7d7"
                android:gravity="center"
                android:text="休市"
                android:textColor="@color/color_b2b2b2"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_opsition"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp">

            <TextView
                android:id="@+id/opsition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_button_008eff"
                android:paddingBottom="8dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="8dp"
                android:text="持仓详情"
                android:textColor="@color/color_008EFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_store_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:background="@drawable/shap_circle_00a3cc"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
