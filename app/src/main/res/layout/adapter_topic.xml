<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_12dp">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="12dp"
                android:orientation="horizontal">

                <com.honglu.future.widget.CircleImageView
                    android:id="@+id/header_img"
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="@dimen/dimen_8dp"/>
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_gravity="center_vertical"
                    android:text="小牛9115"
                    android:textColor="#979899"
                    android:textSize="@dimen/dimen_13sp" />
                <TextView
                    android:id="@+id/announce_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#CACBCC"
                    android:textSize="@dimen/dimen_11sp"
                    tools:text="13:45" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/dimen_36dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dimen_4dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:gravity="center_horizontal"
                android:textColor="@color/grey"
                android:textSize="@dimen/dimen_12sp"
                tools:text="12-26" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_12dp"
                    android:textColor="#151515"
                    android:textSize="@dimen/dimen_15sp"
                    tools:text="周二(8月2日)早盘现货白银开美元/盎司开盘后银价小幅下跌，但在跌破20.40美元后行情跌势停止之后开始止跌反弹。" />
                <View
                    android:id="@+id/viewLine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_line"
                    android:background="@color/color_line"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>