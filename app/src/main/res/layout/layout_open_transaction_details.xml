<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_34dp"
        android:text="螺纹1801"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_36dp"
        android:layout_marginLeft="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_buy_rise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买涨 1手"
            android:textColor="@color/color_FB4F4F"
            android:textSize="@dimen/dimen_16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_60dp"
            android:text="建仓价 5130"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建仓时间"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:text="2017-10-31 13:52:34"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建仓手续费"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />


        <TextView
            android:id="@+id/tv_service_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_34dp"
            android:text="10.26"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />
    </LinearLayout>


    <View
        style="@style/line_base_horizontal"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报单编号"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />

        <TextView
            android:id="@+id/tv_baodan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:text="5838749"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成交编号"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />

        <TextView
            android:id="@+id/tv_chengdan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:text="1478292"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />

    </LinearLayout>

</LinearLayout>