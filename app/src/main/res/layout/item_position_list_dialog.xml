<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_gouxuan"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:layout_marginBottom="@dimen/dimen_18dp"
        android:background="@drawable/check_blue_gouxuan"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tv_buy_num"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_16sp"
            android:text="买涨一手"/>


        <com.honglu.future.widget.DinTextView
            android:id="@+id/tv_priced"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_16sp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/color_333333"
            android:text="----"/>


        <com.honglu.future.widget.DinTextView
            android:id="@+id/tv_profit_loss"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_16sp"
            android:text="----"/>
    </LinearLayout>

</LinearLayout>