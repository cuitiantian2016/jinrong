<?xml version="1.0" encoding="utf-8"?>
<com.honglu.future.widget.squareitem.SquareItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1px"
        android:adjustViewBounds="true"
        android:padding="1px"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/v_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dip"
        android:clickable="true"
        android:padding="10dp"
        android:src="@drawable/photo_checkbox_bg" />

</com.honglu.future.widget.squareitem.SquareItemLayout>