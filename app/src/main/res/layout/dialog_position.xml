<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/amount_white_top_radius_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_20sp"
            android:textColor="@color/color_333333"
            android:drawableRight="@mipmap/ic_trade_tip"
            android:drawablePadding="@dimen/dimen_10dp"
            android:text="@string/position_details" />

          <ImageView
              android:id="@+id/iv_close"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:src="@mipmap/ic_close_fork" />
    </RelativeLayout>

      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/dimen_line"
          android:background="@color/color_E6E6E6"
          android:layout_marginTop="@dimen/dimen_16dp"/>

    <ListView
        android:id="@+id/lv_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:divider="@android:color/transparent"
        android:horizontalSpacing="1dp"
        android:scrollbars="none"
        android:verticalSpacing="1dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_20dp"/>
    </LinearLayout>
</LinearLayout>