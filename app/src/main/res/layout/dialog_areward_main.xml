<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/top_left_right_radius_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp">

            <com.honglu.future.widget.DinTextView
                android:id="@+id/dtv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_areward_nb"
                android:background="@drawable/shape_50dp_f7f8f9"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_18sp"
                android:paddingLeft="@dimen/dimen_5dp"
                android:paddingRight="@dimen/dimen_20dp"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:drawablePadding="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_21dp"
                android:text="---"/>


            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_close_fork"
                android:layout_marginTop="@dimen/dimen_15dp" />
        </RelativeLayout>


        <com.honglu.future.widget.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_gravity="center_horizontal"
            tools:src="@mipmap/img_head" />


        <TextView
            android:id="@+id/tv_areward_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_15sp"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/dimen_11dp"
            android:layout_gravity="center_horizontal"
            tools:text="打赏给 小牛7654"/>

        <include  layout="@layout/areward_default_layout"/>


        <include  layout="@layout/areward_input_layout"/>


         <TextView
             android:id="@+id/tv_qiehuan"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/color_008EFF"
             android:textSize="@dimen/dimen_14sp"
             android:text="@string/default_text"
             android:layout_marginLeft="@dimen/dimen_15dp"
             android:layout_marginTop="@dimen/dimen_14dp"/>


           <TextView
               android:id="@+id/tv_areward"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dimen_50dp"
               android:textColor="@color/color_white"
               android:textSize="@dimen/dimen_18sp"
               android:layout_marginLeft="@dimen/dimen_15dp"
               android:layout_marginRight="@dimen/dimen_15dp"
               android:layout_marginBottom="@dimen/dimen_15dp"
               android:layout_marginTop="@dimen/dimen_17dp"
               android:background="@drawable/shape_blue_2dp_bg"
               android:gravity="center"
               android:text="确认打赏"/>
    </LinearLayout>

</LinearLayout>