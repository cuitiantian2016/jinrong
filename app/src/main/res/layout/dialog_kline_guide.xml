<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_full_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/full_kline_guide_bg"
        android:paddingBottom="@dimen/dimen_21dp"
        android:paddingLeft="@dimen/dimen_19dp"
        android:paddingRight="@dimen/dimen_19dp"
        android:paddingTop="@dimen/dimen_48dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_full_kline" />

    </LinearLayout>
</LinearLayout>