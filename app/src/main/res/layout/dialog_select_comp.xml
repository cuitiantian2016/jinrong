<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_left_right_radius_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_15dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_10dp"
                android:src="@mipmap/ic_left_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="选择开户公司"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_20sp" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_10dp"
                android:src="@mipmap/ic_close_popup" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_guofu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:background="@drawable/comp_bg"
            android:paddingBottom="@dimen/dimen_19dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_19dp">

            <ImageView
                android:id="@+id/iv_guofu"
                android:layout_width="@dimen/dimen_15dp"
                android:layout_height="@dimen/dimen_15dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_guofu" />

            <TextView
                android:id="@+id/tv_guofu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@+id/iv_guofu"
                android:paddingBottom="@dimen/dimen_1dp"
                android:text="国富期货"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16dp" />

            <ImageView
                android:id="@+id/iv_gf_tip"
                android:layout_width="@dimen/dimen_19dp"
                android:layout_height="@dimen/dimen_19dp"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:layout_toRightOf="@+id/tv_guofu"
                android:src="@mipmap/ic_trade_tip"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_guofu_select"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_checked" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_mey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/comp_bg"
            android:paddingBottom="@dimen/dimen_19dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_19dp">

            <ImageView
                android:id="@+id/iv_mey"
                android:layout_width="@dimen/dimen_15dp"
                android:layout_height="@dimen/dimen_15dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_mey" />

            <TextView
                android:id="@+id/tv_mey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@+id/iv_mey"
                android:text="美尔雅期货"
                android:paddingBottom="@dimen/dimen_1dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16dp" />

            <ImageView
                android:id="@+id/iv_mey_tip"
                android:layout_width="@dimen/dimen_19dp"
                android:layout_height="@dimen/dimen_19dp"
                android:layout_marginLeft="@dimen/dimen_14dp"
                android:layout_toRightOf="@+id/tv_mey"
                android:src="@mipmap/ic_trade_tip"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_mey_select"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/unselect_circle_bg" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>