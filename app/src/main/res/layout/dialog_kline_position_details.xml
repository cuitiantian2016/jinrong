<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/top_left_right_radius_white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_16dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----"
                android:textStyle="bold"
                android:textColor="@color/color_333333"
                android:drawableRight="@mipmap/ic_trade_tip"
                android:drawablePadding="@dimen/dimen_10dp"
                android:textSize="@dimen/dimen_20sp" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_close_fork" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_line"
            android:background="@color/color_EDEDED"
            android:layout_marginTop="@dimen/dimen_16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp">

            <TextView
                android:layout_width="@dimen/dimen_70dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/color_A4A5A6"
                android:text="@string/buy_type_num"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_14sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/color_A4A5A6"
                android:text="@string/chicang_priced"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_14sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/color_A4A5A6"
                android:text="最新价"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="@dimen/dimen_14sp"
                android:textColor="@color/color_A4A5A6"
                android:text="@string/chicang_profit_loss"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:layout_marginBottom="@dimen/dimen_18dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_buy_num"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_16sp"
                android:text="买涨--手"/>


            <com.honglu.future.widget.DinTextView
                android:id="@+id/tv_priced"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/color_333333"
                android:text="----"/>


            <com.honglu.future.widget.DinTextView
                android:id="@+id/tv_lastPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_16sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/color_333333"
                android:text="----"/>

            <com.honglu.future.widget.DinTextView
                android:id="@+id/tv_profit_loss"
                android:layout_width="70dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_16sp"
                android:text="----"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_line"
            android:background="@color/color_EDEDED" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:layout_marginBottom="@dimen/dimen_18dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pingcang_price"
                android:textColor="@color/color_A4A5A6"
                android:textSize="@dimen/dimen_15sp" />

            <ImageView
                android:id="@+id/iv_price_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5dp"
                android:src="@mipmap/ic_del" />

            <EditText
                android:id="@+id/et_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:minWidth="@dimen/dimen_70dp"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_input_edit"
                android:digits="0123456789."
                android:paddingBottom="@dimen/dimen_4dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_4dp"
                android:maxLength="10"
                android:text="0"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_14sp" />

            <ImageView
                android:id="@+id/iv_price_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_5dp"
                android:paddingLeft="@dimen/dimen_5dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:src="@mipmap/ic_add" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_line"
            android:background="@color/color_EDEDED"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:layout_marginBottom="@dimen/dimen_18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_maxpc_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pingcang_num_"
                android:textColor="@color/color_A4A5A6"
                android:textSize="@dimen/dimen_15sp" />


            <ImageView
                android:id="@+id/iv_maxpc_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5dp"
                android:src="@mipmap/ic_del" />

            <EditText
                android:id="@+id/et_maxpc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:minWidth="@dimen/dimen_70dp"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_input_edit"
                android:inputType="number"
                android:paddingBottom="@dimen/dimen_4dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_4dp"
                android:text="0"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_14sp" />

            <ImageView
                android:id="@+id/iv_maxpc_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_5dp"
                android:paddingLeft="@dimen/dimen_5dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:src="@mipmap/ic_add" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_line"
            android:background="@color/color_EDEDED"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="平仓手续费"
                android:textColor="@color/color_A4A5A6"
                android:textSize="@dimen/dimen_15sp" />


            <com.honglu.future.widget.DinTextView
                android:id="@+id/tv_sxprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_14sp" />
        </LinearLayout>

         <TextView
             android:id="@+id/tv_gongshi"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/color_A4A5A6"
             android:textSize="@dimen/dimen_13sp"
             android:layout_marginTop="@dimen/dimen_18dp"
             android:layout_marginLeft="@dimen/dimen_15dp"
             android:text="--------"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70dp"
            android:orientation="horizontal"
            android:background="@color/color_F7F8F9"
            android:layout_marginTop="@dimen/dimen_18dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_12sp"
                    android:textColor="@color/color_A4A5A6"
                    android:text="平仓盈亏 "/>

                <com.honglu.future.widget.DinTextView
                    android:id="@+id/tv_ykprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_24sp"
                    android:textColor="@color/color_B1B1B3"
                    android:text="---"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_pingcang"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_20sp"
                android:paddingLeft="@dimen/dimen_30dp"
                android:paddingRight="@dimen/dimen_30dp"
                android:gravity="center_vertical"
                android:background="@color/color_B1B1B3"
                android:textColor="@color/color_white"
                android:text="快速平仓"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>