<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_round">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:lineSpacingExtra="@dimen/dimen_4dp"
        android:textColor="@color/color_464646"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:textSize="@dimen/dimen_17sp"
        android:text="标题"/>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dimen_4dp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:textColor="@color/global_label_color"
        android:textSize="12sp"
        android:text="内容"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_line"
        android:background="@color/color_B3E6E7EA"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_leftbut"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44dp"
            android:gravity="center"
            android:layout_weight="1.0"
            android:text="取消"
            android:textColor="@color/global_label_color"
            android:textSize="@dimen/dimen_15sp" />

        <View
            android:layout_width="@dimen/dimen_line"
            android:layout_height="match_parent"
            android:background="@color/color_B3E6E7EA"/>

        <TextView
            android:id="@+id/tv_rightbut"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/color_BB8B7D"
            android:textSize="@dimen/dimen_15sp" />
    </LinearLayout>

</LinearLayout>