<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_config"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_user"
        android:layout_marginBottom="60dp"/>


     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_gravity="right">

         <RelativeLayout
             android:id="@+id/rl_message_hint"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/dimen_10dp"
             android:padding="@dimen/dimen_5dp">

             <ImageView
                 android:layout_width="@dimen/dimen_20dp"
                 android:layout_height="@dimen/dimen_18dp"
                 android:src="@mipmap/ic_user_msg" />

             <View
                 android:id="@+id/v_red"
                 android:layout_width="@dimen/dimen_8dp"
                 android:layout_height="@dimen/dimen_8dp"
                 android:layout_marginLeft="@dimen/dimen_13dp"
                 android:background="@drawable/shape_red" />

         </RelativeLayout>



         <ImageView
             android:id="@+id/iv_setup"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:padding="@dimen/dimen_5dp"
             android:layout_marginTop="@dimen/dimen_10dp"
             android:layout_marginRight="@dimen/dimen_10dp"
             android:src="@mipmap/ic_setup"/>

     </LinearLayout>



    <ImageView
        android:id="@+id/img_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_viper"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/dimen_5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:paddingBottom="@dimen/dimen_20dp">


        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/user_head_bg"
            android:layout_marginLeft="@dimen/dimen_15dp">

            <com.honglu.future.widget.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dimen_70dp"
                android:layout_height="@dimen/dimen_70dp"
                android:layout_gravity="center"
                tools:src="@mipmap/img_head"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_mobphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_20sp"
            tools:text="小妞"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_loginRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:text="您好，请登录"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_20sp"
            android:visibility="visible"/>
    </LinearLayout>

</FrameLayout>