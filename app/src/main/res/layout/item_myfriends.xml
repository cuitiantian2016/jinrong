<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp">

        <com.honglu.future.widget.CircleImageView
            android:id="@+id/user_img"
            android:layout_width="@dimen/dimen_45dp"
            android:layout_height="@dimen/dimen_45dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            tools:src="@mipmap/img_head"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_45dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:maxWidth="@dimen/dimen_120dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16sp"
                    tools:text="我是名字"/>

                <TextView
                    android:id="@+id/flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="@dimen/dimen_2dp"
                    android:paddingRight="@dimen/dimen_2dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/ic_user_role_bg"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_10sp"
                    android:visibility="visible"
                    tools:text="分析师"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_topic_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/dimen_12sp"
                    tools:text="发帖数：1"/>

                <TextView
                    android:id="@+id/tv_attention_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/dimen_12sp"
                    tools:text="粉丝数：1"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_recommend" />
    </LinearLayout>

     <View
         android:id="@+id/v_line"
         android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_line"
         android:background="@color/color_EDEDED"
         android:layout_marginRight="@dimen/dimen_10dp"
         android:layout_marginLeft="@dimen/dimen_10dp"/>
</LinearLayout>