<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/color_F7F8F9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include  layout="@layout/layout_user_content_head"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_white">

        <TextView
            android:id="@+id/tv_shop_mall"
            style="@style/user_content_bottom_widget"
            android:drawableLeft="@mipmap/ic_user_shop_mall"
            android:drawableRight="@mipmap/ic_user_right_arrow"
            android:text="@string/text_user_shop_mall"/>

        <View
            style="@style/small_line_style"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp" />

        <TextView
            android:id="@+id/tv_task"
            style="@style/user_content_bottom_widget"
            android:drawableLeft="@mipmap/ic_user_task"
            android:drawableRight="@mipmap/ic_user_right_arrow"
            android:text="@string/text_user_task" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_10dp"
            android:background="@color/color_F7F8F9"/>


        <TextView
            android:id="@+id/tv_open_account"
            style="@style/user_content_bottom_widget"
            android:drawableLeft="@mipmap/ic_user_open_account"
            android:drawableRight="@mipmap/ic_user_right_arrow"
            android:text="@string/text_user_open_account"/>


        <View
            style="@style/small_line_style"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"/>


        <TextView
            android:id="@+id/tv_novice"
            style="@style/user_content_bottom_widget"
            android:drawableLeft="@mipmap/ic_user_novice"
            android:drawableRight="@mipmap/ic_user_right_arrow"
            android:text="@string/text_user_novice"/>

        <View
            style="@style/small_line_style"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"/>

        <TextView
            android:id="@+id/tv_kefu"
            style="@style/user_content_bottom_widget"
            android:drawableLeft="@mipmap/ic_user_kefu"
            android:drawableRight="@mipmap/ic_user_right_arrow"
            android:text="@string/text_user_kefu"/>

        <View
            style="@style/small_line_style"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"/>

        <TextView
            android:id="@+id/tv_aboutus"
            style="@style/user_content_bottom_widget"
            android:drawableLeft="@mipmap/ic_user_aboutus"
            android:drawableRight="@mipmap/ic_user_right_arrow"
            android:text="@string/text_user_aboutus"/>


        <TextView
            android:id="@+id/tv_phone"
            style="@style/user_content_bottom_widget"
            android:drawableLeft="@mipmap/ic_user_phone"
            android:drawableRight="@mipmap/ic_user_right_arrow"
            android:text="@string/text_user_phone"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_update"
            style="@style/user_content_bottom_widget"
            android:drawableLeft="@mipmap/ic_setup"
            android:drawableRight="@mipmap/ic_user_right_arrow"
            android:text="设置"
            android:visibility="gone"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_10dp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>