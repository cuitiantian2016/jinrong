<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_input_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_29dp"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_14sp"
        android:textColor="@color/color_979899"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:text="牛币数量"/>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginLeft="@dimen/dimen_15dp"
         android:layout_marginRight="@dimen/dimen_15dp"
         android:layout_marginTop="@dimen/dimen_20dp">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/icon_areward_nb"
             android:layout_gravity="bottom"
             android:layout_marginBottom="@dimen/dimen_11dp"/>


         <EditText
             android:id="@+id/et_input"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/color_333333"
             android:layout_marginLeft="@dimen/dimen_13dp"
             android:background="@null"
             android:inputType="number"
             android:maxLines="7"
             android:textSize="50sp"
             android:text="0" />
     </LinearLayout>

     <View
         android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_line"
         android:background="@color/color_EDEDED"
         android:layout_marginLeft="@dimen/dimen_15dp"
         android:layout_marginRight="@dimen/dimen_15dp"/>
</LinearLayout>