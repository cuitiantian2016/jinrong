<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@color/white"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="@dimen/dimen_12dp"
	android:paddingRight="@dimen/dimen_12dp"
	android:clipChildren="false">
	<LinearLayout
		android:id="@+id/ll_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="horizontal"
		android:paddingBottom="@dimen/dimen_10dp"
		android:paddingTop="@dimen/dimen_10dp"
		android:visibility="visible">
		<TextView
			android:id="@+id/tv_day"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/color_323232"
			android:textStyle="bold"
			android:text="28/"
			android:textSize="@dimen/dimen_16sp"/>
		<TextView
			android:id="@+id/tv_mouth"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/color_141414"
			android:text="8月"
			android:textSize="@dimen/dimen_12sp"/>
	</LinearLayout>
		<LinearLayout
			android:layout_below="@id/ll_date"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:layout_height="wrap_content">
			<TextView
				android:paddingTop="@dimen/dimen_10dp"
				android:id="@+id/tv_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#323232"
				android:textSize="14sp"
				android:text="14:50"/>
			<LinearLayout
				android:id="@+id/ll"
				android:layout_width="wrap_content"
				android:layout_marginLeft="@dimen/dimen_10dp"
				android:orientation="vertical"
				android:layout_height="match_parent">
				<View
					android:id="@+id/line_top"
					android:layout_marginLeft="@dimen/dimen_5dp"
					android:layout_width="@dimen/dimen_1dp"
					android:layout_height="12dp"
					android:background="@color/D7_D8_D8"/>
				<ImageView
					android:layout_width="10dp"
					android:layout_height="10dp"
					android:scaleType="centerCrop"
					android:src="@mipmap/icon_hours"/>
				<View
					android:layout_marginLeft="@dimen/dimen_5dp"
					android:id="@+id/line"
					android:layout_width="@dimen/dimen_1dp"
					android:layout_height="match_parent"
					android:background="@color/D7_D8_D8"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingBottom="@dimen/dimen_20dp"
				android:orientation="vertical">
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dimen_12dp">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<TextView
							android:id="@+id/tv_content"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:lineSpacingMultiplier="1.2"
							android:textColor="@color/color_323232"
							android:textSize="@dimen/dimen_14sp"
							tools:text="【交易所收盘】周二(8月2日)早盘现货白银开于是/盎司。开盘后银价继续小幅下跌，但在跌破20.40美元后行情跌势停止，之后开始止跌反弹的的的的" />
						<TextView
							android:id="@+id/tv_unfold"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="@dimen/dimen_4dp"
							android:paddingTop="@dimen/dimen_4dp"
							android:textColor="#008EFF"
							android:textSize="@dimen/dimen_14sp"
							tools:text="全文"/>
						<android.support.v7.widget.CardView
							android:layout_marginTop="@dimen/dimen_18dp"
							android:id="@+id/cv_img_activity"
							android:layout_width="match_parent"
							android:layout_height="130dp"
							app:cardCornerRadius="10dp"
							app:cardElevation="0dp"
							app:cardUseCompatPadding="false">
						<ImageView
							android:id="@+id/iv_photo"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:src="@color/white"
							android:scaleType="centerCrop" />
						</android.support.v7.widget.CardView>
					</LinearLayout>
				</RelativeLayout>
			</LinearLayout>
		</LinearLayout>
</RelativeLayout>