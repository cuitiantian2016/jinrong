<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_internet_disconnection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/net_error_iv"
            android:layout_width="137dp"
            android:layout_height="101dp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:src="@mipmap/neterror_icon" />

        <TextView
            android:id="@+id/tv_net_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/net_error_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:singleLine="true"
            android:text="您的网络状态不佳"
            android:textColor="@color/grey"
            android:textSize="@dimen/dimen_14sp" />

        <RelativeLayout
            android:id="@+id/rel_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_neterror">

            <TextView
                android:id="@+id/text_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_8dp"
                android:paddingLeft="@dimen/dimen_40dp"
                android:paddingRight="@dimen/dimen_40dp"
                android:paddingTop="@dimen/dimen_8dp"
                android:singleLine="true"
                android:text="刷新"
                android:textColor="@color/color_008EFF"
                android:textSize="@dimen/dimen_16sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>