<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="2dp">

        <TextView
            android:id="@+id/txt_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="开盘："
            android:textColor="@color/color_323232"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_choose_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_open"
            android:textColor="@color/color_00ce64"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/txt_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_open"
            android:layout_marginLeft="10dp"
            android:text="收盘："
            android:textColor="@color/color_323232"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_choose_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_choose_open"
            android:layout_toRightOf="@id/txt_close"
            android:textColor="@color/color_ff5376"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/txt_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/txt_open"
            android:text="最高："
            android:textColor="@color/color_323232"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_choose_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_height"
            android:textColor="@color/color_ff5376"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/txt_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txt_height"
            android:layout_below="@id/txt_height"
            android:text="最低："
            android:textColor="@color/color_323232"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_choose_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_choose_height"
            android:layout_toRightOf="@id/txt_low"
            android:textColor="@color/color_00ce64"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/txt_rise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/txt_height"
            android:text="涨跌："
            android:textColor="@color/color_323232"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_choose_rise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_rise"
            android:textColor="@color/color_00ce64"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/txt_rise_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txt_rise"
            android:layout_below="@id/txt_rise"
            android:text="涨幅："
            android:textColor="@color/color_323232"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_choose_rise_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_choose_rise"
            android:layout_toRightOf="@id/txt_rise_percent"
            android:textColor="@color/color_ff5376"
            android:textSize="10sp"/>
    </RelativeLayout>