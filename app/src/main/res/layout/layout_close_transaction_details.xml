<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_F7F8F9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15dp"
            android:background="@drawable/shape_white_2dp_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="螺纹1801"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_20sp" />

                <TextView
                    android:id="@+id/tv_buy_rise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:text="买涨 1手"
                    android:textColor="@color/color_FB4F4F"
                    android:textSize="@dimen/dimen_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平仓盈亏"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_16sp" />

                <com.honglu.future.widget.DinTextView
                    android:id="@+id/tv_profit_loss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:text="+430"
                    android:textColor="@color/color_FB4F4F"
                    android:textSize="@dimen/dimen_16sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_40dp"
                    android:text="实际盈亏"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_16sp" />

                <com.honglu.future.widget.DinTextView
                    android:id="@+id/real_profit_loss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:text="+430"
                    android:textColor="@color/color_FB4F4F"
                    android:textSize="@dimen/dimen_16sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- 持仓均价/ 建仓均价 ui-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_52dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持仓均价"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_17dp"
                android:text="建仓均价"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:orientation="vertical">

            <com.honglu.future.widget.DinTextView
                android:id="@+id/tv_chicang_average_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3634"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_17dp"
                android:orientation="horizontal">

                <com.honglu.future.widget.DinTextView
                    android:id="@+id/tv_jiancang_average_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3634"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_16sp" />

                <ImageView
                    android:id="@+id/iv_expandable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dimen_4dp"
                    android:src="@mipmap/ic_glk_small_arrow_down" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_expandable_close_transaction_details" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_line"
        android:background="@color/color_EDEDED"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_17dp" />


    <!-- 中间部分ui -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_17dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平仓价"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_17dp"
                android:text="平仓时间"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_17dp"
                android:text="平仓类型"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_17dp"
                android:text="平仓手续费"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_34dp"
            android:orientation="vertical">

            <com.honglu.future.widget.DinTextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3634"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/tv_tiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_17dp"
                android:text="2017-10-31 13:52:34"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />


            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_17dp"
                android:text="系统平仓"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />

            <com.honglu.future.widget.DinTextView
                android:id="@+id/tv_service_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_17dp"
                android:text="29.08"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_line"
        android:background="@color/color_EDEDED"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_17dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报单编号"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_17dp"
                android:text="成交编号"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_baodan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="232323"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />


            <TextView
                android:id="@+id/tv_deal_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_17dp"
                android:text="232323"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>