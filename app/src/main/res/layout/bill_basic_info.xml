<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_20dp"
    android:layout_marginRight="@dimen/dimen_20dp"
    android:layout_marginTop="@dimen/dimen_15dp"
    android:background="@drawable/shape_white_8dp_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_17dp"
    android:paddingLeft="@dimen/dimen_20dp"
    android:paddingTop="@dimen/dimen_15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="基本资料"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期货公司名称："
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_comp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国富期货公司"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="wrap_content"
            android:text="客户姓名"
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王小二"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="wrap_content"
            android:text="客户号"
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_client_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01010306"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="wrap_content"
            android:text="币种"
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人民币"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="wrap_content"
            android:text="交易日期"
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_trade_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-10-24"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="wrap_content"
            android:text="查询日期"
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_query_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-10-24"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>
</LinearLayout>