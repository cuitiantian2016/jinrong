<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlhomeitem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_6dp_radio_width_110_press"
    android:foreground="?android:attr/selectableItemBackground">


    <ImageView
        android:id="@+id/imgred"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/selector_6dp_radio_width_110_press_green"
        android:scaleType="fitXY"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/img_icon_market"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_width="@dimen/dimen_48dp"
        android:layout_height="@dimen/dimen_27dp"/>
    <TextView
        android:id="@+id/tvitemname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_icon_market"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:textSize="@dimen/dimen_14sp"
        tools:text="哈贵银" />

    <ImageView
        android:id="@+id/ivConpon"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_13dp"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/tvitemprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvitemname"
        android:layout_centerInParent="true"
        android:text="--"
        android:textColor="#FF5376"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvitemrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvitemprice"
        android:layout_centerHorizontal="true"
        android:textColor="#FF5376"
        android:textSize="10sp"
        tools:text="asdfgdfg" />

    <ImageView
        android:id="@+id/imgitemclose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_13dp"
        android:layout_alignParentRight="true"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/imggreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/selector_6dp_radio_width_110_press_green"
        android:visibility="gone" />

</RelativeLayout>
