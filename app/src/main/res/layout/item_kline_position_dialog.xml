<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="@dimen/dimen_20dp"
         android:layout_marginLeft="@dimen/dimen_15dp"
         android:layout_marginRight="@dimen/dimen_15dp">

         <ImageView
             android:id="@+id/iv_gouxuan"
             android:layout_width="@dimen/dimen_20dp"
             android:layout_height="@dimen/dimen_20dp"
             android:background="@drawable/check_blue_gouxuan"/>

         <TextView
             android:id="@+id/tv_buy_num"
             android:layout_width="@dimen/dimen_70dp"
             android:layout_height="wrap_content"
             android:textSize="@dimen/dimen_16sp"
             android:layout_marginLeft="@dimen/dimen_15dp"
             android:text="---"/>


         <com.honglu.future.widget.DinTextView
             android:id="@+id/tv_priced"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/dimen_16sp"
             android:layout_weight="1"
             android:gravity="center_horizontal"
             android:textColor="@color/color_333333"
             android:text="----"/>

         <com.honglu.future.widget.DinTextView
             android:id="@+id/tv_profit_loss"
             android:layout_width="@dimen/dimen_70dp"
             android:layout_height="wrap_content"
             android:gravity="right"
             android:textSize="@dimen/dimen_16sp"
             android:text="----"/>
     </LinearLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_line"
        android:background="@color/color_EDEDED"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"/>

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_35dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pingcang_price"
                android:textColor="@color/color_A4A5A6"
                android:textSize="@dimen/dimen_15sp" />

            <ImageView
                android:id="@+id/iv_price_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5dp"
                android:src="@mipmap/ic_del" />

            <com.honglu.future.widget.KeyBoardEditText
                android:id="@+id/et_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:minWidth="@dimen/dimen_70dp"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_input_edit"
                android:digits="0123456789."
                android:paddingBottom="@dimen/dimen_4dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_4dp"
                android:maxLength="10"
                android:text="0"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_14sp" />

            <ImageView
                android:id="@+id/iv_price_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_5dp"
                android:paddingLeft="@dimen/dimen_5dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:src="@mipmap/ic_add" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_price_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="----"
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_12sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_line"
            android:background="@color/color_EDEDED"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_maxpc_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pingcang_num_"
                android:textColor="@color/color_A4A5A6"
                android:textSize="@dimen/dimen_15sp" />


            <ImageView
                android:id="@+id/iv_maxpc_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5dp"
                android:src="@mipmap/ic_del" />

            <EditText
                android:id="@+id/et_maxpc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:minWidth="@dimen/dimen_70dp"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_input_edit"
                android:inputType="number"
                android:paddingBottom="@dimen/dimen_4dp"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_4dp"
                android:text="0"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_14sp" />

            <ImageView
                android:id="@+id/iv_maxpc_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_5dp"
                android:paddingLeft="@dimen/dimen_5dp"
                android:paddingTop="@dimen/dimen_5dp"
                android:src="@mipmap/ic_add" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_line"
            android:background="@color/color_EDEDED"
            android:layout_margin="@dimen/dimen_15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="平仓手续费"
                android:textColor="@color/color_A4A5A6"
                android:textSize="@dimen/dimen_15sp" />


            <com.honglu.future.widget.DinTextView
                android:id="@+id/tv_sxprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_line"
            android:background="@color/color_EDEDED"
            android:visibility="gone"
            android:layout_margin="@dimen/dimen_15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="实际盈亏 (参考)"
                android:textColor="@color/color_A4A5A6"
                android:textSize="@dimen/dimen_15sp" />


            <com.honglu.future.widget.DinTextView
                android:id="@+id/tv_ykprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>