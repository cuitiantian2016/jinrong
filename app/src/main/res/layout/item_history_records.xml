<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_20dp"
    android:paddingRight="@dimen/dimen_20dp"
    android:paddingTop="@dimen/dimen_15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玉米1801"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />

        <TextView
            android:id="@+id/tv_buy_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:text="买涨"
            android:textColor="@color/color_FB4F4F"
            android:textSize="@dimen/dimen_16sp" />

        <TextView
            android:id="@+id/tv_buy_hands"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:text="1手"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_build"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_7dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建仓价"
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_build_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:text="1665"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:text="建仓手续费"
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:text="6.65"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_closed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_7dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建仓价"
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_build_price_closed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:text="1665"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="平仓价"
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_closed_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:text="6.65"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/dimen_14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="实际盈亏"
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_profit_loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:text="6.65"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_7dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结算价"
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_settlement_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:text="1665"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="当日盈亏"
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_today_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:text="6.65"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/dimen_14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="实际盈亏"
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_actual_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:text="6.65"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp_half"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:background="@color/color_EDEDED" />

</LinearLayout>