<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_no_trade_list"
            android:layout_marginTop="@dimen/dimen_100dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_979899"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:textSize="@dimen/dimen_16sp"
            android:text="还没有关注品种哦"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_add_qptional"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_34dp"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingRight="@dimen/dimen_11dp"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:background="@drawable/shape_50dp_e6e6e6"
        android:drawableLeft="@mipmap/ic_add_qptional"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/dimen_7dp"
        android:text="@string/text_add_qptional"
        android:textColor="@color/color_008EFF"
        android:textSize="@dimen/dimen_13sp"/>

</LinearLayout>