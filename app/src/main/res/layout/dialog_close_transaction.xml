<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/amount_white_top_radius_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_17dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen_10dp"
                android:drawableRight="@mipmap/ic_trade_tip"
                android:text="------"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_20sp" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_close_fork" />
        </RelativeLayout>

        <View
            style="@style/line_base_horizontal"
            android:layout_marginTop="@dimen/dimen_17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_17dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_buy_rise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="买张-手"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持仓均价"
                android:textColor="@color/color_A4A5A6"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/tv_chicang_average_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:text="---"
                android:textColor="@color/color_151515"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <View
            style="@style/line_base_horizontal"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_17dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="平仓委托价"
                android:textColor="@color/color_A4A5A6"
                android:textSize="@dimen/dimen_16sp" />


            <ImageView
                android:id="@+id/iv_price_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:padding="@dimen/dimen_4dp"
                android:src="@mipmap/ic_del" />

            <com.honglu.future.widget.KeyBoardEditText
                android:id="@+id/et_price"
                android:layout_width="@dimen/dimen_70dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_2dp"
                android:paddingBottom="@dimen/dimen_2dp"
                android:background="@drawable/gray_radius_bg"
                android:gravity="center_horizontal"
                android:digits="0123456789."
                android:maxLength="7"
                android:text="0"
                android:textColor="@color/color_333333" />

            <ImageView
                android:id="@+id/iv_price_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:padding="@dimen/dimen_4dp"
                android:src="@mipmap/ic_add" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_price_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:text="≥--- 跌停价 且 ≤--- 涨停价"
            android:textColor="@color/color_A4A5A6"
            android:textSize="@dimen/dimen_12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_17dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_close_hands"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="平仓手数（最多-手）"
                android:textColor="@color/color_A4A5A6"
                android:textSize="@dimen/dimen_16sp" />


            <ImageView
                android:id="@+id/iv_size_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:padding="@dimen/dimen_4dp"
                android:src="@mipmap/ic_del" />

            <EditText
                android:id="@+id/et_size"
                android:layout_width="@dimen/dimen_70dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dimen_2dp"
                android:paddingBottom="@dimen/dimen_2dp"
                android:background="@drawable/gray_radius_bg"
                android:inputType="number"
                android:enabled="false"
                android:maxLength="7"
                android:text=""
                android:textColor="@color/color_333333" />

            <ImageView
                android:id="@+id/iv_size_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:padding="@dimen/dimen_4dp"
                android:src="@mipmap/ic_add" />
        </LinearLayout>

        <View
            style="@style/line_base_horizontal"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_17dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="平仓手续费"
                android:textColor="@color/color_A4A5A6"
                android:textSize="@dimen/dimen_16sp" />


            <TextView
                android:id="@+id/tv_close_transaction_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <View
            style="@style/line_base_horizontal"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_17dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="实际盈亏（参考）"
                android:textColor="@color/color_A4A5A6"
                android:textSize="@dimen/dimen_16sp" />


            <TextView
                android:id="@+id/tv_cankao_profit_loss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_17dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平仓盈亏"
                    android:textColor="@color/color_A4A5A6"
                    android:textSize="@dimen/dimen_12sp" />

                <TextView
                    android:id="@+id/tv_profit_loss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="---"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dimen_24sp" />

                <TextView
                    android:id="@+id/tv_fast_close_transaction"
                    android:layout_width="@dimen/dimen_150dp"
                    android:layout_height="@dimen/dimen_70dp"
                    android:background="@color/color_FB4F4F"
                    android:gravity="center"
                    android:text="快速平仓"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_20sp" />
            </LinearLayout>

            <android.inputmethodservice.KeyboardView
                android:id="@+id/kv_keyboardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/color_E6E6E6"
                android:keyTextColor="@color/color_333333"
                android:shadowRadius="0"
                android:labelTextSize="18sp"
                android:keyTextSize="18sp"
                android:keyBackground="@color/color_white"
                android:layout_alignParentBottom="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>