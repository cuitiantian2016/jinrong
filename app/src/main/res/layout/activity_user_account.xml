<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_line"
        android:layout_below="@+id/toolbar"
        android:background="@color/color_EDEDED" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_line"
        android:background="@color/color_F7F8F9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@mipmap/my_account_head"
                android:orientation="vertical"
                android:padding="@dimen/dimen_20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.honglu.future.widget.DinTextView
                            android:id="@+id/tv_danger_chance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/dimen_22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_2dp"
                            android:text="@string/text_user_danger_chance"
                            android:textColor="@color/color_A4A5A6"
                            android:textSize="@dimen/dimen_12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.honglu.future.widget.DinTextView
                            android:id="@+id/tv_rights_interests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/dimen_22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_2dp"
                            android:text="@string/text_user_rights_interests"
                            android:textColor="@color/color_A4A5A6"
                            android:textSize="@dimen/dimen_12sp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.honglu.future.widget.DinTextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:text="--"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/dimen_22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_2dp"
                            android:text="@string/user_account_kymoney"
                            android:textColor="@color/color_A4A5A6"
                            android:textSize="@dimen/dimen_12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.honglu.future.widget.DinTextView
                            android:id="@+id/tv_profit_loss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:text="--"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/dimen_22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_2dp"
                            android:text="@string/user_account_profit_loss"
                            android:textColor="@color/color_A4A5A6"
                            android:textSize="@dimen/dimen_12sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.honglu.future.widget.DinTextView
                            android:id="@+id/tv_position_profit_loss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:text="--"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/dimen_22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_2dp"
                            android:text="当日平仓盈亏"
                            android:textColor="@color/color_A4A5A6"
                            android:textSize="@dimen/dimen_12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.honglu.future.widget.DinTextView
                            android:id="@+id/tv_service_charge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16dp"
                            android:text="--"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/dimen_22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_2dp"
                            android:text="当日手续费"
                            android:textColor="@color/color_A4A5A6"
                            android:textSize="@dimen/dimen_12sp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_20dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="@dimen/dimen_15dp">

                <TextView
                    android:id="@+id/tv_withdrawals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_user_withdrawals_bg"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/dimen_11dp"
                    android:paddingTop="@dimen/dimen_11dp"
                    android:text="@string/text_user_withdrawals"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:id="@+id/tv_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_user_recharge_bg"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/dimen_11dp"
                    android:paddingTop="@dimen/dimen_11dp"
                    android:text="@string/text_user_recharge"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dimen_16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp_half"
                android:background="@color/color_E3E3E3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dimen_15dp"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_14dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_user_position"
                        android:drawablePadding="@dimen/dimen_7dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_user_position"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dimen_14sp" />


                    <TextView
                        android:id="@+id/tv_account_manage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_18dp"
                        android:drawableLeft="@mipmap/ic_user_account_manage"
                        android:drawablePadding="@dimen/dimen_7dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_user_account_manage"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dimen_14sp" />


                    <TextView
                        android:id="@+id/tv_bond_query"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_18dp"
                        android:drawableLeft="@mipmap/ic_user_bond_query"
                        android:drawablePadding="@dimen/dimen_7dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_user_bond_query"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dimen_14sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_23dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_trade_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_user_trade_details"
                        android:drawablePadding="@dimen/dimen_7dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_user_trade_details"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dimen_14sp" />


                    <TextView
                        android:id="@+id/tv_bill_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_18dp"
                        android:drawableLeft="@mipmap/ic_user_bill_details"
                        android:drawablePadding="@dimen/dimen_7dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_user_bill_details"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dimen_14sp" />


                    <TextView
                        android:id="@+id/tv_history_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_18dp"
                        android:drawableLeft="@mipmap/ic_user_history_bill"
                        android:drawablePadding="@dimen/dimen_7dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_user_history_bill"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dimen_14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_signout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="安全退出"
        android:textColor="@color/color_FB4F4F"
        android:textSize="@dimen/dimen_16sp" />
</RelativeLayout>