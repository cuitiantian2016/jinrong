<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_10dp"
    android:orientation="vertical">

<LinearLayout
    android:id="@+id/ll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_line"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:background="@color/color_EDEDED" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:drawableRight="@mipmap/ic_right_smal_row"
        android:text="玉米801"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_18sp" />


    <LinearLayout
        android:id="@+id/v_bootomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_15dp">

        <TextView
            android:id="@+id/tv_buy_count"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="wrap_content"
            android:text="买涨100手"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />


        <com.honglu.future.widget.DinTextView
            android:id="@+id/tv_average_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="2754"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />

        <com.honglu.future.widget.DinTextView
            android:id="@+id/tv_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="2765"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />

        <com.honglu.future.widget.DinTextView
            android:id="@+id/tv_profit_loss"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="+10000"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp_half"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fast_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_14dp"
            android:paddingTop="@dimen/dimen_13dp"
            android:text="快速平仓"
            android:textColor="@color/color_008EFF"
            android:textSize="@dimen/dimen_16sp" />

        <View
            android:layout_width="@dimen/dimen_1dp_half"
            android:layout_height="match_parent"
            android:background="@color/color_line" />

        <TextView
            android:id="@+id/tv_hold_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_14dp"
            android:paddingTop="@dimen/dimen_13dp"
            android:text="持仓详情"
            android:textColor="@color/color_008EFF"
            android:textSize="@dimen/dimen_16sp" />

    </LinearLayout>
</LinearLayout>

</LinearLayout>