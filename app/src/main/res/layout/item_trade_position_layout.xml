<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_line"
        android:background="@color/color_E3E3E3"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"/>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_18sp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:drawableRight="@mipmap/ic_right_smal_row"
        android:textColor="@color/color_333333"
        android:text="玉米801"/>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/dimen_20dp"
           android:layout_marginRight="@dimen/dimen_20dp"
           android:layout_marginTop="@dimen/dimen_15dp"
           android:layout_marginBottom="@dimen/dimen_15dp">

           <TextView
               android:id="@+id/tv_buy_count"
               android:layout_width="@dimen/dimen_80dp"
               android:layout_height="wrap_content"
               android:textSize="@dimen/dimen_16sp"
               android:text="买涨100手"/>


           <TextView
               android:id="@+id/tv_average_price"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/dimen_16sp"
               android:gravity="center_horizontal"
               android:textColor="@color/color_333333"
               android:layout_weight="1"
               android:text="2754"/>

           <TextView
               android:id="@+id/tv_new_price"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/dimen_16sp"
               android:gravity="center_horizontal"
               android:textColor="@color/color_333333"
               android:layout_weight="1"
               android:text="2765"/>

           <TextView
               android:id="@+id/tv_profit_loss"
               android:layout_width="@dimen/dimen_60dp"
               android:layout_height="wrap_content"
               android:gravity="right"
               android:textSize="@dimen/dimen_16sp"
               android:text="+10000"/>
       </LinearLayout>
</LinearLayout>