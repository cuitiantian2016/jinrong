<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_20dp"
    android:paddingRight="@dimen/dimen_20dp"
    android:paddingTop="@dimen/dimen_13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玉米1801"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_20sp" />

        <TextView
            android:id="@+id/tv_closed"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_22dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:background="@drawable/shape_xiushi_bg"
            android:gravity="center"
            android:text="休市中"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_18dp"
            android:text="成交量"
            android:textColor="@color/color_A7A7A7"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:text="338730"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_right_row" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rise"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_buy_rise"
            android:gravity="center"
            android:text="买涨1678"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_16sp" />

        <TextView
            android:id="@+id/tv_down"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_buy_down"
            android:gravity="center"
            android:text="买涨1677"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="43dp"
            android:layout_height="@dimen/dimen_3dp"
            android:background="@drawable/shape_rise_radio" />

        <TextView
            android:id="@+id/tv_rise_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:text="50%"
            android:textColor="@color/color_FB4F4F"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:text="持仓量"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_down_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:text="50%"
            android:textColor="@color/color_2CC593"
            android:textSize="@dimen/dimen_14sp" />

        <View
            android:layout_width="43dp"
            android:layout_height="@dimen/dimen_3dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:background="@drawable/shape_down_radio" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp_half"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@color/color_E3E3E3" />
</LinearLayout>